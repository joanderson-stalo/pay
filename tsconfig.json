{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*" : ["./src/components/*"],
      "@context/*" : ["./src/context/*"],
      "@models/*" : ["./src/models/*"],
      "@config/*" : ["./src/config/*"],
      "@pages/*" : ["./src/pages/*"],
      "@styles/*" : ["./src/styles/*"],
      "@assets/*" : ["./src/assets/*"],
      "@routes/*" : ["./src/routes/*"],
      "@utils/*" : ["./src/utils/*"],
      "@mock/*" : ["./src/mock/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
